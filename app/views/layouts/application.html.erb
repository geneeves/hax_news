<!DOCTYPE html>
<html>
<head>
  <title>HAXNews</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="header">
    <% if current_user %>
      <ul class="nav pull-right">
        <li>Logged in as <%= current_user.email %></li>
        <li class="nav-pills"><%= link_to 'Log Out', sessions_path, :method => :delete %></li>
      </ul>
    <% else %>
      <ul class="nav nav-pills pull-right"> 
        <li class="active"><%= link_to 'Sign Up', new_user_path %></li>
        <li><%= link_to 'Log In', new_sessions_path %></li>
      </ul>
    <% end %> 
    </div>

    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
